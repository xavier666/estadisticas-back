%tr{:id => dom_id(game)}
  %td= game.id
  %td= game.season
  %td= game.round
  %td= link_to game.local_team.name, game.local_team
  %td= game.local_score
  %td= game.away_score
  %td= link_to game.away_team.name, game.away_team
  %td= short_date game.game_date
  %td.actions
    %ul.nav.navbar-right.panel_toolbox.list-inline
      %li
        = link_to edit_game_path(game), remote: true do
          %i.fa.fa-pencil
      %li
        = link_to game_path(game), remote: true, method: :delete, data: {confirm: t(".confirm_delete"), disable_with: t(".deleting")} do
          %i.fa.fa-trash-o