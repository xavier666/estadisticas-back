.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2= t(".title")
        %ul.nav.navbar-right.panel_toolbo
          %li.dropdown
            %a{:href => "#", data: {toggle: "dropdown", role: "button", aria: {expanded: "false"}}}
              %i.fa.fa-wrench
            %ul.dropdown-menu.pull-right{:role => "menu"}
              %li= link_to t(".import_players"), import_players_path
              %li= link_to t(".calculate_prices"), calculate_prices_players_path
              %li= link_to t(".import_numbers"), import_numbers_players_path
              %li= link_to t(".create"), new_player_path, remote: true
        .clearfix
      .x_content
        %table#datatable.table.table-striped.table-bordered
          %thead
            %tr
              %th.col-md-1= "ID"
              %th.col-md-1= ""
              %th.col-md-1= "#"
              %th.col-md-2= "Name"
              %th.col-md-2= "Team"
              %th.col-md-1= "Price"
              %th.col-md-2= "Position"
              %th.col-md-2= "Active"
              %th.col-md-1= "Options"
          %tbody
            = render @players
          