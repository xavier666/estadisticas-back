.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2= t(".title")
        %ul.nav.navbar-right.panel_toolbo
          %li.dropdown
            %a{:href => "#", data: {toggle: "dropdown", role: "button", aria: {expanded: "false"}}}
              %i.fa.fa-wrench
            %ul.dropdown-menu.pull-right{:role => "menu"}
              %li= link_to t(".create"), new_content_path, remote: true
        .clearfix
      .x_content
        %table#datatable.table.table-striped.table-bordered
          %thead
            %tr
              %th.col-md-1= "ID"
              %th.col-md-4= "Image"
              %th.col-md-4= "Title"
              %th.col-md-4= "Sumary"
              %th.col-md-4= "Keywords"
              %th.col-md-1= "Published"
              %th.col-md-1= "Options"
          %tbody
            = render @contents
          